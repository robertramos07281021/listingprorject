<% layout('/layouts/boilerplate') %>

<h1>All Listings</h1>

<% for(let listing of listings) { %>
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <img src="<%=listing.image %>" alt="" class="img-fluid">
      </div>
      <div class="col-md-5">
        <div class="card-body">
          <h5 class="card-title"><%= listing.name%></h5>
          <p class="card-text"><%= listing.description %></p>
          <p class="card-text">
            <small class="text-muted"><%= listing.location %></small>
          </p>
          <a href="/listings/<%= listing.id %>" class="btn btn-primary"><i class="bi bi-eye"></i> View <%= listing.name %></a>
        </div>
      </div>
    </div>
  </div>
<% } %>